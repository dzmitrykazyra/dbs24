psql -c "CREATE SCHEMA pmt_card_schema_dev"
psql -c "SET search_path TO pmt_card_schema_dev"
psql -c "GRANT USAGE ON SCHEMA pmt_card_schema_dev TO pmt_admin"
psql -c "GRANT ALL PRIVILEGES ON ALL TABLES IN SCHEMA pmt_card_schema_dev  TO pmt_admin"
psql -c "ALTER database pmt_card_dev SET search_path TO pmt_card_schema_dev"

