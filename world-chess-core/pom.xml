<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.dbs24</groupId>
        <artifactId>dbs24</artifactId>
        <version>1.0</version>
    </parent>
    <artifactId>world-chess-core</artifactId>
    <packaging>jar</packaging>
    
    <build>
        <finalName>world-chess-core</finalName> 
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <!--                <includes>
                    <include>**/*.properties</include>
                </includes>-->
            </resource>
            <resource>
                <directory>${main.basedir}/${source.directory.libs}/</directory>
                <includes>
                    <include>entity-core.jar</include>
                    <include>entity-references-api.jar</include>                
                </includes>
                <targetPath>${project.build.outputDirectory}/${source.directory.libs}/</targetPath>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring.boot.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <!--                <version>${spring.boot.version}</version>-->
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven.jar.plugin}</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>${source.directory.libs}/</classpathPrefix>
                            <!--                            <mainClass>test.LeanFTest</mainClass>-->
                        </manifest>
                    </archive>
                    <excludes>
                        <exclude>**/*.properties</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.dbs24</groupId>
            <artifactId>persistence-core</artifactId>
            <version>${app.version}</version>            
        </dependency>   
        <dependency>
            <groupId>org.dbs24</groupId>
            <artifactId>security-manager</artifactId>
            <version>${app.version}</version>            
        </dependency>         
        <dependency>
            <groupId>org.dbs24</groupId>
            <artifactId>spring-core-api</artifactId>
            <version>${app.version}</version>            
        </dependency>   
        <dependency>
            <groupId>org.dbs24</groupId>
            <artifactId>entity-core</artifactId>
            <version>${app.version}</version>  
        </dependency>   
        <dependency>
            <groupId>org.dbs24</groupId>
            <artifactId>spring-config</artifactId>
            <version>${app.version}</version>            
        </dependency>
        <dependency>
            <groupId>${app.root.group}</groupId>
            <artifactId>entity-core-api</artifactId>
            <version>${app.version}</version>
        </dependency> 
    </dependencies>
</project>