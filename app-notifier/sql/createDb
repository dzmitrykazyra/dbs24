sudo su postgres
-- createuser pmt_admin
--psql -c "initdb --locale en_US.UTF-8 -D '/var/lib/postgres/data'"
psql -c "CREATE ROLE note_admin  WITH LOGIN CREATEDB ENCRYPTED PASSWORD '$pr1m0$Swd76'"
psql -c "DROP DATABASE app_notifier_dev"
psql -c "CREATE DATABASE app_notifier_dev OWNER note_admin"
psql -c "ALTER USER note_admin WITH PASSWORD '$pr1m0$Swd76'"
psql -c "grant all privileges on database app_notifier_dev to note_admin"
psql -c "CREATE SCHEMA app_notifier_schema_dev"
psql -c "SET search_path TO app_notifier_schema_dev"
psql -c "GRANT USAGE ON SCHEMA app_notifier_schema_dev TO note_admin"
psql -c "GRANT ALL PRIVILEGES ON ALL TABLES IN SCHEMA app_notifier_schema_dev  TO note_admin"
psql -c "ALTER database app_notifier_dev SET search_path TO app_notifier_schema_dev"

sudo ufw allow 5432/tcp