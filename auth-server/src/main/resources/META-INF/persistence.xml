<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
    <persistence-unit name="auth-server" transaction-type="RESOURCE_LOCAL">
        <!--      <mapping-file>META-INF/entity_references_orm.xml</mapping-file>-->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jar-file>${source.directory.libs}/entity-core.jar</jar-file>        
        <jar-file>${source.directory.libs}/entity-references-api.jar</jar-file>
        <jar-file>${source.directory.libs}/security-manager-starter.jar</jar-file>          
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
        </properties>
    </persistence-unit>
</persistence>
